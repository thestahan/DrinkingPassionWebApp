@page "/login"
@using DrinkingPassionWebApp.Features.Login.Dtos
@using DrinkingPassionWebApp.Features.Login.Store
@inherits FluxorComponent

<MudForm @ref="Form">
    <MudTextField T="string" Label="Adres email" @bind-Value="Model.Email" />
    <MudTextField T="string" Label="Hasło" InputType="InputType.Password" @bind-Value="Model.Password" />
    <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="@(() => SubmitForm())">Zaloguj się</MudButton>
</MudForm>